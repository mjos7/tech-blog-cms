<article class='post'>
  <div class='title'>
    <a href='{{content}}' target='_blank'>{{title}}</a>
    <span>({{format_url content}})</span>
  </div>
  <div class='meta'>
    {{user.username}}
    on
    {{format_date created_at}}
    |
    <a href='/post/{{id}}'>{{comments.length}}
      {{format_plural 'comment' comments.length}}</a>
  </div>
</article>